@{
    ViewData["Title"] = "Criar Conta";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2 class="text-center">Criar Conta</h2>
<hr />
<form>
    <div class="form-group mb-4">
        <label for="name" class="mb-1 ms-2">Nome:</label>
        <input type="text" class="form-control" id="name" placeholder="Digite o seu nome">
    </div>
    <div class="form-group mb-4">
        <label for="email" class="mb-1 ms-2">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Digite o seu email">
    </div>
    <div class="form-group mb-4">
        <label for="password" class="mb-1 ms-2">Senha:</label>
        <input type="password" class="form-control" id="password" placeholder="Digite a sua senha">
    </div>
    <div class="form-group mb-4">
        <label for="confirmPassword" class="mb-1 ms-2">Confirme a Senha:</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirme a sua senha">
    </div>
    <button type="submit" class="btn btn-primary mb-2 mt-1">Criar Conta</button>
</form>
